<?xml version="1.0" encoding="utf-8" ?>
<local:LayoutUserControlBase x:ConnectionId='1'
    x:Class="Richasy.WinUI.Share.Base.StatusTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:Richasy.WinUI.Share.Base"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'
                                               
                                                     
                                                       
                                                               
        ColumnSpacing="8"
                                                         >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Margin="0,4,0,0" VerticalAlignment="Center">
            <ic:SymbolIcon x:ConnectionId='4'
                x:Name="InformationIcon"
                FontSize="14"
                Foreground="{ThemeResource InfoBarInformationalSeverityIconBackground}"
                Symbol="Info"
                Visibility="Collapsed" />
            <ic:SymbolIcon x:ConnectionId='5'
                x:Name="WarningIcon"
                FontSize="14"
                Foreground="{ThemeResource InfoBarWarningSeverityIconBackground}"
                Symbol="Warning"
                Visibility="Collapsed" />
            <ic:SymbolIcon x:ConnectionId='6'
                x:Name="SuccessIcon"
                FontSize="14"
                Foreground="{ThemeResource InfoBarSuccessSeverityIconBackground}"
                Symbol="CheckmarkCircle"
                Visibility="Collapsed" />
            <ic:SymbolIcon x:ConnectionId='7'
                x:Name="ErrorIcon"
                FontSize="14"
                Foreground="{ThemeResource InfoBarErrorSeverityIconBackground}"
                Symbol="DismissCircle"
                Visibility="Collapsed" />
            <ProgressRing x:ConnectionId='8'
                x:Name="LoadingRing"
                Width="12"
                Height="12"
                MinWidth="12"
                MinHeight="12"
                VerticalAlignment="Center"
                IsActive="False"
                Style="{StaticResource PageProgressRingStyle}"
                Visibility="Collapsed" />
        </Grid>
        <TextBlock x:ConnectionId='3'
            Grid.Column="1"
            MaxWidth="300"
            VerticalAlignment="Center"
            FontSize="13"
                                             
            TextTrimming="CharacterEllipsis"
            TextWrapping="Wrap" />
    </Grid>
</local:LayoutUserControlBase>

