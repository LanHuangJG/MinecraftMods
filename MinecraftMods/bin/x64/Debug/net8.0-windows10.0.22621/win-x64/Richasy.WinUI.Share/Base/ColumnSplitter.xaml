<?xml version="1.0" encoding="utf-8" ?>
<local:LayoutUserControlBase x:ConnectionId='1'
    x:Class="Richasy.WinUI.Share.Base.ColumnSplitter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:community="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Richasy.WinUI.Share.Base"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Rectangle x:ConnectionId='2'
            Width="6"
            Fill="Transparent"
                                                      />
        <Border x:ConnectionId='3'
            Width="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                                                                                                   />
        <community:PropertySizer x:ConnectionId='4'
            x:Name="Sizer"
            HorizontalAlignment="Center"
                                                       
            IsFocusEngagementEnabled="False"
            IsTabStop="False"
                                                          
                                                          
                                                                                                                   />
        <local:VisibilityToggleButton x:ConnectionId='5'
            x:Name="ToggleBtn"
            Margin="0,0,-32,0"
            VerticalAlignment="Stretch"
                                                                                         
            CornerRadius="0,6,6,0"
                                                   
                                                                 
                                                 
                                                   
                                                         />
    </Grid>
</local:LayoutUserControlBase>

